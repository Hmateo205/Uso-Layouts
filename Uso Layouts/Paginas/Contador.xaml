<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uso_Layouts.Paginas.Contador"
             Title="Contador"
             Background="DarkOliveGreen">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <!-- Contador y botón -->
        <Label x:Name="CounterLabel" 
               Text="El botón contador no ha sido presionado aún"
               FontSize="18"
               TextColor="White"
               HorizontalOptions="Center" />

        <Button
            x:Name="IncrementCounterButton"
            Text="Incrementar contador" 
            Clicked="OnIncrementCounterButtonClicked"
            HorizontalOptions="Fill" 
            TextColor="Black"
            BackgroundColor="Beige" />
    </StackLayout>

</ContentPage>