<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uso_Layouts.Paginas.StackLayout"
             Title="StackLayout"
             Background="DarkOliveGreen">

    <ScrollView>
        <StackLayout Margin="20"
         Spacing="6">
            <Label Text="Colores"
       FontSize="30" />
            <BoxView Color="White"
         HeightRequest="40" />
            <BoxView Color="Black"
         HeightRequest="40" />
            <BoxView Color="Gray"
         HeightRequest="40" />
            <Label Text="Tonos de verde"
       FontSize="18" />
            <BoxView Color="GreenYellow"
         HeightRequest="40" />
            <BoxView Color="Green"
         HeightRequest="40" />
            <BoxView Color="DarkGreen"
         HeightRequest="40" />
           
        <Button 
            x:Name="FlexLayout"
            Text="FlexLayout ==>"
            TextColor="White"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnFlexLayoutClicked"
            BackgroundColor="Black"/>

        </StackLayout>
    </ScrollView>


</ContentPage>