<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uso_Layouts.MainPage"
             BackgroundColor="DarkOliveGreen">
             

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
        <!-- Texto de bienvenida -->
        <Label Text="¡Bienvenido a mi aplicación .NET MAUI!"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Texto adicional -->
        <Label Text="Esta aplicación es de layouts"
               FontSize="20"
               HorizontalOptions="Center" />

        <!-- Botón Contador -->
        <Button
            x:Name="Boton1"
            Text="Contador" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnBoton1Clicked"
            HorizontalOptions="Fill" 
            TextColor="Black"
            BackgroundColor="Beige"/>
        
        <!-- Botón GridLayout -->
        <Button
            x:Name="Boton2"
            Text="GridLayout" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnBoton2Clicked"
            HorizontalOptions="Fill" 
            TextColor="Black"
            BackgroundColor="Beige"/>

        <!-- Botón StackLayout -->
        <Button
            x:Name="Boton3"
            Text="StackLayout" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnBoton3Clicked"
            HorizontalOptions="Fill" 
            TextColor="Black"
            BackgroundColor="Beige"/>

        <!-- Botón FlexLayout -->
        <Button
            x:Name="Boton4"
            Text="FlexLayout" 
            SemanticProperties.Hint="Counts the number of times you click"
            Clicked="OnBoton4Clicked"
            HorizontalOptions="Fill" 
            TextColor="Black"
            BackgroundColor="Beige"/>


        <!-- Imagen -->
        <Image
            Source="dotnet_bot.png"
            HeightRequest="185"
            Aspect="AspectFit"
            SemanticProperties.Description="dot net bot in a race car number eight" />
            
   
    </StackLayout>

</ContentPage>
